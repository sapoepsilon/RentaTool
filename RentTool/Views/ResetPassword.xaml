<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RentTool.Views.ResetPassword">
    <ContentPage.Content>
        <StackLayout Margin="20" VerticalOptions="CenterAndExpand" Spacing="20" Orientation="Vertical">
             <Entry Placeholder="User  Email"  x:Name="UserLoginEmail" Keyboard="Plain"></Entry>

            <Button x:Name = "Reset" Clicked="Reset_Clicked" BackgroundColor="Black" TextColor="white" Text="Reset Password" /> 
        </StackLayout>
    </ContentPage.Content>
</ContentPage>