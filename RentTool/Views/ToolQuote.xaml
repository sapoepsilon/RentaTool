<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
   xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="RentTool.Views.ToolQuote">
    <ContentPage.Content>
        <ScrollView HeightRequest="3000">
         <StackLayout>
            <Image x:Name="ToolImage" Margin="0, 15, 0, 0" HeightRequest="300" WidthRequest="100"></Image>
            <Label x:Name="ToolName" Margin="10, 0, 0, 0" FontSize="Large" TextColor="Black" ></Label>
             <Label  Text = "Start Date" FontSize="Medium" TextColor="Black" Margin="10,0,0,0"></Label>
             <DatePicker x:Name = "startDatePicker" Margin=" 10,0,0,0" MinimumDate="01/01/2021" MaximumDate="12/31/2022"/>
             <Label Text="End Date" FontSize="Medium" TextColor="Black" Margin="10,0,0,0"></Label>
             <DatePicker x:Name = "endDatePicker" Margin=" 10,0,0,0" MinimumDate="01/01/2021" MaximumDate="12/31/2022"/>
            <Button x:Name="Total" Margin="0, 40, 0, 0" Text="Rent" HorizontalOptions="Center" WidthRequest="300" BackgroundColor="#679276" Clicked="RentButton_OnClicked" CornerRadius="20" TextColor="White"/>
        </StackLayout>
        </ScrollView>
   </ContentPage.Content>
</ContentPage>
