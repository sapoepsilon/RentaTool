<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RentTool.Views.ChangePassword">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Change Your Password" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />
            <Entry Text="Current Password: " x:Name="userPassword"/>
            <Entry Text="New Password: "  x:Name="UserNewPassword"/>
            <Entry Text="New password: "  x:Name="UserNPassword"/>
            <Button  Text="Change" BackgroundColor="Blue"  HorizontalOptions="Center" VerticalOptions="CenterAndExpand"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>