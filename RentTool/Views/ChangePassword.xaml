<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RentTool.Views.ChangePassword">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Change Your Password" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />

            <Entry Placeholder="Enter your new pasword "  x:Name="UserNewPassword" IsPassword="True"/>
            <Entry Placeholder="Re-Enter your new pasword "  x:Name="UserNPassword" IsPassword="True"/>
            <Button  Text="Change" BackgroundColor="Blue"  HorizontalOptions="Center" VerticalOptions="CenterAndExpand" Clicked="Change_Cliked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>