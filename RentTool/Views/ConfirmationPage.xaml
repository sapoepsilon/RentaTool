<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="RentTool.Views.ConfirmationPage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Label Text="Rent Confirmed! ✅" Margin="10,0,0,0" FontSize="Large" TextColor="Black"></Label>
                <Image x:Name="ToolImage" Margin="0, 15, 0, 0" HeightRequest="100" WidthRequest="100"></Image>
                <Label x:Name="ToolName" Margin="10, 0, 0, 0" FontSize="Medium" TextColor="Black" ></Label>
                <Label x:Name="FirstName" FontSize="Small" TextColor="Black"></Label>
                <Label x:Name=" LastName" FontSize="Small" TextColor="Black"></Label>
            </StackLayout>
        </ScrollView>
        
    </ContentPage.Content>
</ContentPage>
